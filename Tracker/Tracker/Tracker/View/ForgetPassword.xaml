<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             Title="Forget Password"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tracker.View.ForgetPassword">
    <ContentPage.Content>

        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="80*" />
            </Grid.RowDefinitions>

            <StackLayout Padding="10,50,10,10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="0" Orientation="Vertical">
                <Entry Placeholder="Enter Your Mail id" Text="{Binding Email_Id}"/>
            </StackLayout>

            <StackLayout Padding="50,0,50,0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.Row="1">
                <Button Text="Send" BackgroundColor="#2eb82e" Clicked="OnSendClick"/>
            </StackLayout>

        </Grid>
        
    </ContentPage.Content>
</ContentPage>